<section class="cart py-16 sm:px-16">
    <% if(session.cart) {%>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) {%>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizza.item.name %></h1>
                    <span class="uppercase"><%= pizza.item.size %></span>
                </div>
                <span class="flex-1"><%= pizza.qty %> Pcs</span>
                <span class="font-bold text-lg">â‚¹ <%= pizza.item.price  * pizza.qty %></span>
            </div>
            <% } %>
        </div>
        <hr />
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total amount</span>
                <span class="amount text-2xl font-bold ml-2">â‚¹ <%= session.cart.totalPrice %></span>
            </div>
            <% if(user) {%>
            <div>
                <form action="/orders" method="POST" class="mt-12" id="orders-form">
                    <!-- <div class="w-1/2 ml-auto mb-4 flex items-center justify-between">
                        <select id="paymentType" name="paymentType" class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded leading-tight focus:outline-none focus:shadow-outline">
                          <option value="cod">Cash on delivery</option>
                          <option value="card">Pay with card</option>
                        </select>
                        <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                          </svg>
                      </div> -->
                    <input 
                    class="border border-gray-400 p-2 w-1/2 mb-4" 
                    type="text" placeholder="Phone number"
                    name="phone" id="phone">
                    <input 
                    class="border border-gray-400 p-2 w-1/2" 
                    type="text" placeholder="Address"
                    name="address" id="address">
                    <div>
                        <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"> Order Now</button>
                    </div>
                </form>
            </div>
            <% } else {%>
            <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <% } %>
        </div>
    </div>
    <% } else {%>
    <div class="empty-cart py-16">
        <div class="container ms-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜Š</h1>
            <p class="text-gray-500 text-lg mb-12">
                You probably haven't ordered a pizza yet. <br/>
                To order a pizza, go to the main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>
</section>